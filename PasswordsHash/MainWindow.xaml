<Window x:Class="PasswordsHash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordsHash"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="AppName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26">Paswords</TextBlock>

        <ScrollViewer Grid.Row="1" CanContentScroll="True">
            <StackPanel x:Name="ViewList">
            </StackPanel>
        </ScrollViewer>
        
        
        
        <Button Grid.Row="2" Name="AddPass" Width="90" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AddPass_Click"  Margin="20,0" FontSize="18">Add</Button>

    </Grid>
</Window>
